@using Application.DTOs.User
@model List<SimplifiedUserDTO>

<div class="inbox-container d-flex">
    <div class="inbox-user-list col-4">
        @foreach (var user in Model)
        {
            await Html.RenderPartialAsync("_InboxUserCardPartial", user);
        }
    </div>
    <div class="chat-panel col-8" id="chatPanel">
        <!-- Chat content will be dynamically loaded here -->
    </div>
</div>

<style>
    .inbox-container {
        display: flex;
        height: 100vh;
    }

    .inbox-user-list {
        width: 30%;
        border-right: 1px solid #e0e0e0;
        padding: 15px;
        overflow-y: auto;
    }

    .chat-panel {
        width: 70%;
        padding: 15px;
    }

    .inbox-user-card {
        display: flex;
        align-items: center;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .inbox-user-card:hover {
            background-color: #f0f0f0;
        }

    .user-card__picture {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
    }
</style>